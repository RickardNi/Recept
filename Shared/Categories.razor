@page "/categories"
@inject RecipeService RecipeService

<h1 class="categories-page-heading">Kategorier</h1>

@if (isLoading)
{
    <p>Laddar recept...</p>
}
else
{
    <div class="categories-layout">
        <aside class="categories-sidebar">
            <ul class="category-list">
                @foreach (var category in categories)
                {
                    <li>
                        <button class="category-item @(selectedCategory == category ? "active" : "")"
                                @onclick="() => SelectCategory(category)">
                            @if (CategoryIconCatalog.Icons.TryGetValue(category, out var icon))
                            {
                                <span class="category-icon @GetIconToneClass(category)">
                                    @((MarkupString)icon)
                                </span>
                            }
                            @category
                        </button>
                    </li>
                }
            </ul>
        </aside>
        <div class="categories-recipes">
            <h2 class="categories-heading">@selectedCategory</h2>
            @if (filteredRecipes.Count == 0)
            {
                <p>Inga recept i den h√§r kategorin.</p>
            }
            else
            {
                <ul class="recipe-list">
                    @foreach (var recipe in filteredRecipes.OrderBy(r => r.Title))
                    {
                        <li>
                            <a href="/recipe/@recipe.Slug">@recipe.Title</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
}

@code {
    private List<RecipeMetadata> allRecipes = new();
    private List<string> categories = new();
    private List<RecipeMetadata> filteredRecipes = new();
    private string selectedCategory = string.Empty;
    private bool isLoading = true;

    [SupplyParameterFromQuery(Name = "category")]
    public string? CategoryQuery { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            allRecipes = await RecipeService.GetAllRecipesAsync();
            categories = allRecipes
                .SelectMany(r => r.Categories)
                .Select(CategoryDefinitions.Normalize)
                .Where(c => !string.IsNullOrWhiteSpace(c))
                .Distinct()
                .OrderBy(c => c)
                .ToList();

            ApplyRequestedCategory();
        }
        finally
        {
            isLoading = false;
        }
    }

    protected override void OnParametersSet()
    {
        if (!isLoading)
        {
            ApplyRequestedCategory();
        }
    }

    private void ApplyRequestedCategory()
    {
        if (categories.Count == 0)
        {
            selectedCategory = string.Empty;
            filteredRecipes.Clear();
            return;
        }

        var requested = CategoryDefinitions.Normalize(CategoryQuery ?? string.Empty);
        var match = categories.FirstOrDefault(category =>
            string.Equals(category, requested, StringComparison.OrdinalIgnoreCase));

        SelectCategory(match ?? categories[0]);
    }

    private void SelectCategory(string category)
    {
        selectedCategory = category;
        filteredRecipes = allRecipes
            .Where(r => r.Categories.Contains(category))
            .ToList();
    }

    private static string GetIconToneClass(string category)
    {
        if (string.Equals(category, "Veganskt", StringComparison.OrdinalIgnoreCase))
        {
            return "category-icon--veganskt";
        }

        if (string.Equals(category, "Vegetariskt", StringComparison.OrdinalIgnoreCase))
        {
            return "category-icon--vegetariskt";
        }

        if (string.Equals(category, "Frysbara", StringComparison.OrdinalIgnoreCase) ||
            string.Equals(category, "Frysbar", StringComparison.OrdinalIgnoreCase))
        {
            return "category-icon--frysbara";
        }

        return string.Empty;
    }
}